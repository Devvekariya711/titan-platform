# ============================================================================
# TITAN PLATFORM - ENVIRONMENT CONFIGURATION
# ============================================================================
# All user-controllable settings are here. NO settings in code files.
# Copy this file to .env and fill in your values.
# ============================================================================

# ===== API CONFIGURATION =====
# Get your API key: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your_google_gemini_api_key_here

# ===== MODEL SELECTION (Task-Based) =====
# Use different models based on task complexity to optimize cost/performance

# High-priority/complex tasks (L1 synthesis, complex analysis)
MODEL_HIGH_PRIORITY=gemini-2.0-flash-exp

# Medium-priority tasks (L2 heads, standard analysis)
MODEL_MEDIUM_PRIORITY=gemini-1.5-flash

# Low-priority/simple tasks (L3 specialists, simple lookups)
MODEL_LOW_PRIORITY=gemini-2.5-flash-lite

# Temperature for model responses (0.0 = deterministic, 1.0 = creative)
MODEL_TEMPERATURE=0.7

# ===== L2 AGENT CONTROLS (Enable/Disable Individual Heads) =====
# Turn on/off specific L2 department heads
ENABLE_HEAD_OF_QUANT=true
ENABLE_HEAD_OF_INTEL=true
ENABLE_CHIEF_RISK_OFFICER=true
ENABLE_STRATEGY_DIRECTOR=true

# ===== API RATE LIMITS =====
# Control API usage to stay within your quota
API_REQUESTS_PER_DAY=1000
API_REQUESTS_PER_MINUTE=60
RATE_LIMIT_ENABLED=true

# Alert when approaching limits (percentage)
RATE_LIMIT_WARNING_THRESHOLD=80

# ===== AGENT RESPONSE CONFIGURATION =====
# Maximum words in agent responses (controls verbosity and token usage)
AGENT_RESPONSE_MAX_WORDS=250
L1_PRINCIPAL_MAX_WORDS=300
L2_HEADS_MAX_WORDS=250
L3_SPECIALISTS_MAX_WORDS=200

# ===== PARALLEL PROCESSING =====
# Enable parallel execution of multiple agents (faster but uses more API calls)
ENABLE_PARALLEL_PROCESSING=false

# Maximum number of agents running concurrently
MAX_CONCURRENT_AGENTS=4

# Timeout for tool execution (seconds)
TOOL_TIMEOUT_SECONDS=30

# ===== SYNTHESIS WEIGHTS =====
# How much weight to give each L2 head in final recommendation
# Must sum to 1.0 (automatic normalization if not)
WEIGHT_QUANT=0.40
WEIGHT_INTEL=0.30
WEIGHT_RISK=0.20
WEIGHT_STRATEGY=0.10

# ===== RISK MANAGEMENT =====
# Enable Chief Risk Officer veto power
ENABLE_RISK_VETO=true

# Default maximum acceptable drawdown (percentage as decimal)
DEFAULT_MAX_DRAWDOWN=0.20

# Volatility multiplier for risk assessment
VOLATILITY_THRESHOLD_MULTIPLIER=1.5

# Value at Risk confidence level (0.95 = 95%)
VAR_CONFIDENCE_LEVEL=0.95

# ===== CACHING & DATA =====
# Enable caching of market data (recommended for performance)
CACHE_ENABLED=true

# Number of days before cached data expires
CACHE_EXPIRY_DAYS=30

# Default period for backtests (1y, 2y, 5y)
BACKTEST_DEFAULT_PERIOD=1y

# Initial capital for backtests (USD)
BACKTEST_INITIAL_CAPITAL=10000

# ===== LOGGING =====
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Write logs to file
LOG_TO_FILE=true

# Write logs to console
LOG_TO_CONSOLE=true

# Days to keep log files before rotation
LOG_ROTATION_DAYS=7

# Maximum log file size (MB)
LOG_MAX_SIZE_MB=10

# ===== MEMORY BANK =====
# Enable ChromaDB memory bank
ENABLE_MEMORY_BANK=true

# Days to retain user preferences and analysis history
MEMORY_RETENTION_DAYS=90

# Enable automatic data compaction
MEMORY_COMPACTION_ENABLED=true

# Automatic backup interval (hours, 0 = disabled)
MEMORY_BACKUP_INTERVAL_HOURS=0

# ===== USER DEFAULTS =====
# Default user ID if not specified in query
DEFAULT_USER_ID=default_user

# Default risk tolerance (LOW, MEDIUM, HIGH)
DEFAULT_RISK_TOLERANCE=MEDIUM

# ===== DATA SOURCES =====
# Market data provider (currently only yfinance supported)
MARKET_DATA_PROVIDER=yfinance

# Number of news sources to aggregate
NEWS_DEFAULT_SOURCES=5

# Hours to look back for news
NEWS_HOURS_BACK=24

# ===== FEATURE FLAGS =====
# Enable/disable major system components
ENABLE_BACKTEST_ENGINE=true
ENABLE_FACT_CHECKING=true
ENABLE_SOCIAL_SENTIMENT=true
ENABLE_DASHBOARD=true
ENABLE_METRICS_TRACKING=true

# ===== DASHBOARD =====
# Dashboard refresh interval (seconds)
DASHBOARD_REFRESH_INTERVAL=300

# Dashboard output file
DASHBOARD_OUTPUT_FILE=dashboard.html

# ===== DEVELOPMENT & DEBUGGING =====
# Enable debug mode (verbose logging, no API calls to external services)
DEBUG_MODE=false

# Save agent reasoning/thoughts for analysis
SAVE_AGENT_THOUGHTS=true

# Enable verbose logging (very detailed output)
VERBOSE_LOGGING=false

# ===== NOTIFICATION & ALERTS =====
# Enable email/SMS alerts (future feature)
ENABLE_ALERTS=false

# Alert email address
ALERT_EMAIL=

# ===== ADVANCED SETTINGS =====
# Maximum tokens for model responses
MAX_TOKENS=1000

# Top-p sampling parameter
TOP_P=0.95

# Top-k sampling parameter  
TOP_K=40

# Commission rate for backtests (as decimal)
BACKTEST_COMMISSION_RATE=0.001

# ============================================================================
# END OF CONFIGURATION
# ============================================================================
# After updating this file, restart the application for changes to take effect.
